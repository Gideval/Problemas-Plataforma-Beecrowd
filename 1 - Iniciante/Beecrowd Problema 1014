using System;
using System.Globalization;

public class HelloWorld
{
    public static void Main(string[] args)
    {
        int km = Int32.Parse(Console.ReadLine());
        double litros = Convert.ToDouble(Console.ReadLine(), CultureInfo.InvariantCulture);
        
        double resultado = km / litros;
        
        Console.WriteLine($"{resultado.ToString("F3", CultureInfo.InvariantCulture)} km/l");
    }
}
